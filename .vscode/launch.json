  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug compiler",
      "cargo": {
        "args": ["build", "--bin=elliec", "--package=ellie_engine"],
        "filter": {
          "name": "elliec",
          "kind": "bin"
        }
      },
      "args": [
        "compile",
        "${workspaceFolder}/test_dir/test.ei",
        "--allow-panics",
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug tokenizer",
      "cargo": {
        "args": ["build", "--bin=elliec", "--package=ellie_engine"],
        "filter": {
          "name": "elliec",
          "kind": "bin"
        }
      },
      "args": [
        "tokenize",
        "${workspaceFolder}/test_dir/test.ei",
        "--allow-panics",
        "--"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}
